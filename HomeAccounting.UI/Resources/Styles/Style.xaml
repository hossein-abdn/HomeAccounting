<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:HomeAccounting.UI.Resources.Styles"
                    xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
                    xmlns:ctl="http://Infra.Wpf">
    <DataTemplate x:Key="TabTemplate">
        <StackPanel Orientation="Horizontal">
            <Image Source="{Binding RelativeSource={RelativeSource AncestorType={x:Type c1:C1ToolbarTabItem}}, Path=(ctl:AttachImage.Image)}" Height="16" Width="16"/>
            <TextBlock Margin="3" Text="{Binding RelativeSource={RelativeSource TemplatedParent},Path=Content}"/>
        </StackPanel>
    </DataTemplate>

    <Style x:Key="HeaderPage" TargetType="GroupBox">
        <Setter Property="FlowDirection" Value="RightToLeft"/>
        <Setter Property="Header" Value="{Binding ViewTitle}"/>
        <Setter Property="Margin" Value="10"/>
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Padding" Value="5"/>
    </Style>
</ResourceDictionary>